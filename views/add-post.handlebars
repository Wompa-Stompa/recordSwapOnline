<article class="new-page">
    <section class="new-form-page">
        <div class="form-heading">
            <h2>Create New Blog Post</h2>
        </div>
        <div class="form-section">
            <form class="new-post-form">
                <div class="post-title-section">
                    <label for="post-title">Title</label>
                    <input type="text" id="post-title" name="post-title" />
                </div>
                <div class="image-btn col-md-12 ml-auto justify-content-md-center ">
                        <label for="image">Select your Record Image:</label> <br>
                        <input type="file" id="image" name="image" required>
                </div>    
                <div class="post-band-name">
                    <label for="post-band-name">Band Name</label>
                    <input type="text" id="post-band-name" name="post-band-name" />
                </div>
                <div class="post-album-name">
                    <label for="post-album-name">Album Name</label>
                    <input type="text" id="post-album-name" name="post-album-name" />
                </div>
                <div class="post-genre">
                    <label for="post-genre">Genre</label>
                    <input type="text" id="post-genre" name="post-genre" />
                </div>
                <div class="post-price">
                    <label for="post-price">Price</label>
                    <input type="text" id="post-price" name="post-price" />
                </div>
                <div>
                    <label for="post-stock">Stock</label>
                    <input type="text" id="post-stock" name="post-stock" />
                </div>

                <button type="submit" class="btn">Create</button>
            </form>
        </div>
    </section>
</article>

